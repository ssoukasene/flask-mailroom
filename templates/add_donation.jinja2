{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
<form method ="POST">
    <label for="donor-input">Donor Name:  </label><input id="donor-input" type="text" name="donor">
    <br><br>
    <label for="donation-input">Donation Amount:  </label><input id="donation-input" type="text" name="donation">
    <br><br>
    {% if error %}<span class="error">{{ error }}<br>{% endif %}
    <input type="submit" value="Submit Donation">
</form>
{% endblock content %}
